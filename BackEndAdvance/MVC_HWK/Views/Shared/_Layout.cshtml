</html>

<script>
    //   打/**就會自動生成註解，可以解釋

    /**
     * 生成DropdownList
     * param Item
     * param Url
     * param responsevalue
     */

    function GetDropdownListTable(Item, Url,responsevalue) {
        $(Item).kendoDropDownList({
            optionLabel: "請選擇",
            dataTextField: "Text",
            dataValueField: "Value",
            dataSource: {
                transport: {
                    read: {
                        dataType: "json",
                        url: Url
                        // Url+"?param=1"  可以直接用參數帶回來，就不用創三個ActionResult
                    }
                }
            },
            dataBound: function (e) {
                e.sender.value(responsevalue);
            }
        })
    }
</script>

